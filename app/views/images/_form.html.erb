<%= simple_form_for @image, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :title %>
  <%= error_span(@image[:title]) %>
  <%= f.input :episode %>
  <%= error_span(@image[:episode]) %>
  <%= f.input :tag1 %>
  <%= error_span(@image[:tag1]) %>
  <%= f.input :tag2 %>
  <%= error_span(@image[:tag2]) %>
  <%= f.input :tag3 %>
  <%= error_span(@image[:tag3]) %>

  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                images_path, :class => 'btn btn-default' %>
<% end %>
